<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="de.tfsw.accounting.elster.commandCategory"
            name="Elster Command Category">
      </category>
      <command
            categoryId="de.tfsw.accounting.elster.commandCategory"
            id="de.tfsw.accounting.elster.ustvaCommand"
            name="UStVA">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="de.tfsw.accounting.elster.UStVAHandler"
            commandId="de.tfsw.accounting.elster.ustvaCommand">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu?after=de.tfsw.accounting.ui.main.menu.window">
         <menu
               id="de.tfsw.accounting.elster.menus.main"
               label="ELSTER"
               mnemonic="L">
            <command
                  commandId="de.tfsw.accounting.elster.ustvaCommand"
                  icon="icons/transmit_blue.png"
                  style="push">
            </command>
            <!--visibleWhen
                  checkEnabled="false">
               <systemTest
                     property="osgi.nl"
                     value="de_DE">
               </systemTest>
            </visibleWhen-->
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=accounting.main.toolbar.3">
         <toolbar
               id="de.tfsw.accounting.elster.toolbar">
            <command
                  commandId="de.tfsw.accounting.elster.ustvaCommand"
                  icon="icons/transmit_blue.png"
                  id="de.tfsw.accounting.elster.toolbar.ustva">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
</plugin>
