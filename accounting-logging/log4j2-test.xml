<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
	<Appenders>
		<Appender type="Console" name="STDOUT">
			<Layout type="PatternLayout" pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{1} - %msg%n" />
		</Appender>
		<Appender type="Console" name="STDOUT_AUDIT">
			<Layout type="PatternLayout" pattern="%d{HH:mm:ss.SSS} %msg%n" />
		</Appender>
	</Appenders>
	<Loggers>
		<Logger name="de.tfsw.accounting.service.BusinessLogger" level="info" additivity="false">
			<AppenderRef ref="STDOUT_AUDIT" />
		</Logger>
		<Logger name="de.tfsw.accounting" level="trace">
			<AppenderRef ref="STDOUT" />
		</Logger>
		<Root level="error">
			<AppenderRef ref="STDOUT" />
		</Root>
	</Loggers>
</Configuration>