<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
    
    <!--  -->
    <xs:element name="AccountingReports" type="AccountingReports"/>

    <!--  -->
    <xs:complexType name="AccountingReports">
        <xs:sequence>
            <xs:element name="Reports" type="Reports" maxOccurs="1" />
        </xs:sequence>
    </xs:complexType>
    
    <!--  -->
    <xs:complexType name="Reports">
        <xs:sequence>
            <xs:element name="Report" type="Report" minOccurs="1" maxOccurs="unbounded">
                <xs:unique name="UniqueReportId">
                    <xs:selector xpath="Report" />
                    <xs:field xpath="@id" />
                </xs:unique>            
            </xs:element>
        </xs:sequence>
    </xs:complexType>
    
    <!--  -->
    <xs:complexType name="Report">
        <xs:sequence>
            <xs:element name="Model" type="Model" minOccurs="0" maxOccurs="1" />
        </xs:sequence>
        <xs:attribute name="id" type="xs:string" use="required"/>
        <xs:attribute name="template" type="xs:string" use="required"/>
    </xs:complexType>
    
    <!--  -->
    <xs:complexType name="Model">        
        <xs:attribute name="id" type="xs:string" use="required"/>
        <xs:attribute name="class" type="xs:string" use="required"/>
    </xs:complexType>
</xs:schema>